<div class="body-form">
  <div class="container">
    <div class="row d-flex justify-content-around">
      <div class="edit-form">
        <div class="progress w-100 mt-4 progress-form">
          <div class="progress-bar progress-bar-form" role="progressbar" style="width: 1%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
        <h4 class="mt-4 form-question">Hello <%= @user.first_name %></h4>
        <h5 class="mt-4">Pour commencer, dans quels domaines souhaitez-vous investir ?</h5>
        <div class="underline"></div>
        <div class="img-form d-flex">
          <%= image_tag "step1.png" %>
        </div>
        <%= simple_form_for([@user], :url => registration_path(@user), :method => :patch) do |f| %>
          <%= f.error_notification %>


          <legend class="col-form-label pt-0"></legend>
          <div class="form-group check_boxes optional user_categories category-choices">

            <input type="hidden" name="user[category_ids][]" value="" />
            <% @categories.each do |category| %>
              <div class="form-check category-chosen" style="background-image: url(<%= image_path category.image %>)">
                <input class="form-check-input check_boxes optional d-none"  type="checkbox" value="<%= category.id %>" name="user[category_ids][]" id="user_category_ids_<%= category.id %>" />
                <label class="collection_check_boxes" for="user_category_ids_<%= category.id %>"><%= category.title %></label>
              </div>
            <% end %>
          </div>
          <%= f.input :step, as: :hidden, :input_html => { :value => 'step1' } %>
          <div class="form-actions">
            <%= f.button :submit, "Continuer", class:" btn btn-form" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>



