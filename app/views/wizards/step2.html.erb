<div class="body-form">
  <div class="container">
    <div class="row d-flex justify-content-around ">
      <div class="edit-form">
        <div class="progress w-100 mt-4 progress-form">
          <div class="progress-bar progress-bar-form" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
        <div class="img-form d-flex mt-4">
          <%= image_tag "world.png" %>
        </div>
        <h5 class="my-3">Okay, et dans quelles r√©gions du globe terrestre de la Terre ?</h5>
        <div class="underline"></div>
        <%= simple_form_for([@user], :url => registration_path(@user), :method => :patch) do |f| %>
        <%= f.error_notification %>
        <legend class="col-form-label pt-0"></legend>
        <div class="form-group check_boxes optional user_locations category-choices grid-3">
          <input type="hidden" name="user[location_ids][]" value="" />
          <% @locations.each do |location| %>
            <div class="category-chosen-wrapper step2">
              <div class="form-check category-chosen category-chosen-step2">
                <input class="form-check-input check_boxes optional d-none"  type="checkbox" value="<%= location.id %>" name="user[location_ids][]" id="user_location_ids_<%= location.id %>" />
                <label class="collection_check_boxes" for="user_location_ids_<%= location.id %>"><%= location.title %></label>
              </div>
            </div>
            <% end %>
          <%= f.input :step, as: :hidden, :input_html => { :value => 'step2' } %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Continuer", class:" btn btn-form" %>
        </div>
        <% end %>
    </div>
  </div>
</div>
