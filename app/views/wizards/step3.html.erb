<div class="body-form">
  <div class="container">
    <div class="row d-flex justify-content-around ">
      <div class="edit-form">
        <div class="progress w-100 mt-4 progress-form">
          <div class="progress-bar progress-bar-form" role="progressbar" style="width: 50%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
        <div class="img-form d-flex mt-4">
          <%= image_tag "step3.png" %>
        </div>
        <h5 class="mt-3">Vous préférez quel type de porteur de projet ?</h5>
        <div class="underline"></div>
        <%= simple_form_for([@user], :url => registration_path(@user), :method => :patch) do |f| %>
          <%= f.error_notification %>
          <legend class="col-form-label pt-0"></legend>
          <div class="form-group check_boxes optional user_company_types category-choices grid-2">
            <input type="hidden" name="user[company_type_ids][]" value="" />
            <% @company_types.each do |company_type| %>
              <div class="category-chosen-wrapper">
                <div class="form-check category-chosen" style="background-image: url(<%= image_path company_type.image %>)">
                  <input class="form-check-input check_boxes optional d-none"  type="checkbox" value="<%= company_type.id %>" name="user[company_type_ids][]" id="user_company_type_ids_<%= company_type.id %>" />
                  <label class="collection_check_boxes" for="user_company_type_ids_<%= company_type.id %>"><%= company_type.title %></label>
                </div>
              </div>
            <% end %>
            <%= f.input :step, as: :hidden, :input_html => { :value => 'step3' } %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Continuer", class:" btn btn-form" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
