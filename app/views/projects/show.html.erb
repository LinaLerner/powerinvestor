<div class="container">

  <div class="d-flex flex-column">

    <div class="d-flex mt-5 justify-content-around">

      <div class="picto p-2">
        Insert picto here
      </div>

      <div class="project-description-card p-2 w-40">
        <h1><%= @project.title.capitalize %></h1>

        <h2><%= @project.city %></h2>
        <h2><%= @project.location.title %></h2>

        <p><%= @project.provider %></p>
        <p><%= @project.company_type.title %></p>
        <p>Insert category</p>

        <h2>Descritpion</h2>
        <p><%= @project.long_description %></p>

        <h2>Project manager profile:</h2>
        <p><%= @project.project_manager_profile %></p>

        <p>Début du financement : <%= @project.start_date %></p>
        <p>Fin du financement : <%= @project.end_date %></p>
        <p>Notre note : <%= @project.rating %></p>
      </div>

    <div class="d-flex flex-column project-financial-info-card p-2 w-40">

      <div>
        <p>Durée du remboursement :<%= @project.exit_timing %></p>
        <p>Avancement : <%= (@project.amount_collected.to_f / @project.amount_needed * 100 ).round %> %</p>
        <p>Montant nécessaire : <%= @project.amount_needed %></p>
        <p>Montant récolté : <%= @project.amount_collected %></p>
        <p>Investissement minimum : <%= @project.minimum_investment %></p>
      </div>

      <div class="btn">
        <%=  link_to "Investir dans ce projet", @project.project_url%>
      </div>

      <%=  link_to "Ajouter à mes favoris", project_favorites_path(@project), method: :post%>

    </div>

  </div>

  <%=  link_to "go back", projects_path%>

</div>
