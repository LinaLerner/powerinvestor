  <div class="cards-grid">
    <% projects.each do |project| %>
      <div class="cards"><div class="overlay"></div>
            <div class="cards-header"><h2><%= project.title %> </h2><div></div>
<div><%= project.rating %> % pertinences</div>
          </div>
          <div class="underline-cards"></div>
          <div class="cards-top">
          <% project.categories.to_a.each do |category| %>
           <div class="cards-tag-card">
             <%= category.title %>
           </div>
          <% end %>

          </div>




          <div class="cards-middle"> <%= project.short_description %>
          </div>
 <div class="cards-matching">  </div>
<div class="cards-footer">
          <div class="cards-picto-box">
            <img src="https://res.cloudinary.com/dqwubjw5x/image/upload/v1559665618/battery-low_hdtxf5.png" alt="progression" class="cards-picto-status"> <%= (project.amount_collected.to_f / project.amount_needed * 100 ).round %>%
            <img src="https://res.cloudinary.com/dqwubjw5x/image/upload/v1559665618/euro_hd0zqv.png" alt="amount" class="cards-picto-amount"> <%= project.minimum_investment %>€/min.
          </div>
        </div>
         <div class="cards-info">
          <a href=<%= "/projects/#{project.id}"  %>>
            <input type="button" class="cards-button" value="découvrir le projet">
          </a>

         </div>



        </div>
    <% end %>
    </div>
